<% if @message.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @message.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @message do |f| %>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_field :body %>
  </div>
  <div class="form-group">
    <%= f.label :to %>
    <%= f.text_field :to %>
  </div>
  <div class="form-group">
    <%= f.label :from %>
    <%= f.text_field :from %>
  </div>
  <%= f.submit(:class => "btn btn-danger") %>
<% end %>
